<%= link_to("<<Back to List", {:action => 'list'}, :class =>
'back-link')%>

<div class="subject show">
	<h2>Show Subject</h2>

	<table summary= "Subject detail view">
		<tr>
			<th>Name</th>
			<th><%= @subject.name %></th>
		</tr>
		<tr>
			<th>Position</th>
			<td><%= @subject.position %></td>
		</tr>
		<tr>
			<th>Visible?</th>
			<th><%= @subject.visible ? 'true': 'false' %></th>
		</tr>	
		<tr>
			<th>Created</th>
			<th><%= @subject.created_at %></th>
		</tr>	
		<tr>
			<th>Updated</th>
			<th><%= @subject.updated_at %></th>
		</tr>
	</table>
</div>
